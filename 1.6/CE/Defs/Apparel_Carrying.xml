<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef Name="ApparelBackpackBase" ParentName="ApparelCarryGearBase">
		<defName>USAC_Apparel_Backpack</defName>
		<label>field backpack</label>
		<!-- 一種用於長距離行軍的大型野戰背包，能夠裝入大量的物品但並不提供任何負重能力的支持。 -->
		<description>A large field backpack designed for long-distance marches, capable of holding a large number of items but offering no load-bearing capacity.</description>
		<graphicData>
			<texPath>Things/Apparel/FieldBackpack/icon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<possessionCount>4</possessionCount>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToMake>20000</WorkToMake>
			<Mass>3</Mass>
			<Bulk>9</Bulk>
		</statBases>
		<tradeTags>
			<li>USAC_Armor</li>
		</tradeTags>
		<equippedStatOffsets>
			<CarryBulk>140</CarryBulk>
		</equippedStatOffsets>
		<costStuffCount>120</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<careIfDamaged>false</careIfDamaged>
			<bodyPartGroups>
				<li>Shoulders</li>
			</bodyPartGroups>
			<layers>
				<li>Backpack</li>
			</layers>
			<tags>
				<li>USAC_Backpack</li>
				<li>IndustrialMilitaryAdvanced</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<wornGraphicPath>Things/Apparel/FieldBackpack/apparel</wornGraphicPath>
			<wornGraphicData>
				<renderUtilityAsPack>true</renderUtilityAsPack>
				<east>
					<offset>(0,-0.05)</offset>
					<thin>
						<offset>(0.2,0)</offset>
					</thin>
					<hulk>
						<offset>(0.1,0)</offset>
					</hulk>
					<fat>
						<offset>(0.04,0)</offset>
					</fat>
					<male>
						<offset>(0.15,0)</offset>
					</male>
					<female>
						<offset>(0.15,0)</offset>
					</female>
				</east>
				<west>
					<offset>(0,-0.05)</offset>
					<thin>
						<offset>(-0.2,0)</offset>
					</thin>
					<hulk>
						<offset>(-0.1,0)</offset>
					</hulk>
					<fat>
						<offset>(-0.04,0)</offset>
					</fat>
					<male>
						<offset>(-0.15,0)</offset>
					</male>
					<female>
						<offset>(-0.15,0)</offset>
					</female>
				</west>
				<north>
					<offset>(0,-0.1)</offset>
					<thin>
						<offset>(0,0)</offset>
					</thin>
					<hulk>
						<offset>(0,-0.05)</offset>
					</hulk>
					<fat>
						<offset>(0,-0.05)</offset>
					</fat>
				</north>
				<male>
					<scale>(1,1)</scale>
				</male>
				<female>
					<scale>(1,1)</scale>
				</female>
				<thin>
					<scale>(0.9,0.95)</scale>
				</thin>
				<hulk>
					<scale>(1.25,1.25)</scale>
				</hulk>
				<fat>
					<scale>(1.15,1.15)</scale>
				</fat>
			</wornGraphicData>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(0.4,0.3,0.15)</only>
				</li>
				<li>
					<weight>15</weight>
					<min>(0.3,0.3,0.3)</min>
					<max>(0.5,0.5,0.5)</max>
				</li>
				<li>
					<weight>6</weight>
					<min>(0.5,0.5,0.5)</min>
					<max>(1,1,1)</max>
				</li>
			</options>
		</colorGenerator>
