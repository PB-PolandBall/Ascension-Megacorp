<?xml version="1.0" encoding="utf-8"?>

<Patch>
    <Operation Class="PatchOperationSequence">
        <operations>
            <!--power skeleton-->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="USAC_Apparel_ExoSkeleton"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>5</ArmorRating_Sharp>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="USAC_Apparel_ExoSkeleton"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>15</ArmorRating_Blunt>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="USAC_Apparel_ExoSkeleton"]/statBases</xpath>
				<value>
					<Bulk>80</Bulk>
					<WornBulk>10</WornBulk>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="USAC_Apparel_ExoSkeleton"]/equippedStatOffsets</xpath>
				<value>
					<CarryWeight>125</CarryWeight>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="USAC_Apparel_ExoSkeleton"]/comps/li[@Class="Fortified.CompProperties_BulletproofPlate"]</xpath>
				<value>
					<compClass>FortifiedCE.CompBulletproofPlate</compClass>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="USAC_Apparel_ExoSkeleton"]/comps/li[@Class="Fortified.CompProperties_BulletproofPlate"]/armorRating</xpath>
				<value>
					<armorRating>20</armorRating>
				</value>
			</li>
        </operations>
    </Operation>
</Patch>