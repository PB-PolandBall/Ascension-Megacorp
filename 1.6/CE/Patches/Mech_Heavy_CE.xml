<?xml version="1.0" encoding="utf-8"?>

<Patch>
    <Operation Class="PatchOperationSequence">
        <operations>

            <li Class="PatchOperationAddModExtension">
                <xpath>Defs/ThingDef[defName="USAC_Mech_Omaha"]</xpath>
                <value>
                    <li Class="CombatExtended.RacePropertiesExtensionCE">
                        <bodyShape>QuadrupedTall</bodyShape>
                    </li>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="USAC_Mech_Omaha"]/statBases</xpath>
                <value>
                    <CarryWeight>300</CarryWeight> <!--ridiculously overweight and over bulk weapon system and ammo :(-->
                    <CarryBulk>230</CarryBulk>
                    <AimingAccuracy>1.8</AimingAccuracy>
                    <ShootingAccuracyPawn>2.5</ShootingAccuracyPawn>
                    <MeleeDodgeChance>0.04</MeleeDodgeChance>
                    <MeleeCritChance>0.56</MeleeCritChance>
                    <MeleeParryChance>0.74</MeleeParryChance>
                    <MaxHitPoints>500</MaxHitPoints>
                    <NightVisionEfficiency>0.9</NightVisionEfficiency>
                    <ReloadSpeed>2</ReloadSpeed>
                </value>
            </li>

            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="USAC_Mech_Omaha"]/statBases/ArmorRating_Blunt</xpath>
                <value>
                    <ArmorRating_Blunt>225</ArmorRating_Blunt>
                </value>
            </li>

            <!--only torso (maybe also head since it's a bipedal mech)-->
            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="USAC_Mech_Omaha"]/statBases/ArmorRating_Sharp</xpath>
                <value>
                    <ArmorRating_Sharp>83</ArmorRating_Sharp>
                </value>
            </li>

            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="USAC_Mech_Omaha"]/statBases/ArmorRating_Heat</xpath>
                <value>
                    <ArmorRating_Heat>1.5</ArmorRating_Heat>
                </value>
            </li>

            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="USAC_Mech_Omaha"]/statBases</xpath>
                <value>
                    <ArmorRating_Electric>0.95</ArmorRating_Electric>
                </value>
            </li>

            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="USAC_Mech_Omaha"]/comps</xpath>
                <value>
                    <li Class="CombatExtended.CompProperties_ArmorDurability">
                        <Durability>4650</Durability>
                        <Regenerates>true</Regenerates>
                        <RegenInterval>1250</RegenInterval>
                        <RegenValue>25</RegenValue>
                        <Repairable>true</Repairable>
                        <RepairIngredients>
                            <Plasteel>10</Plasteel>
                        </RepairIngredients>
                        <RepairTime>300</RepairTime>
                        <RepairValue>200</RepairValue>
                        <CanOverHeal>true</CanOverHeal>
                        <MaxOverHeal>450</MaxOverHeal>
                        <MinArmorPct>0.8</MinArmorPct>
                    </li>
                </value>
            </li>
        </operations>
    </Operation>
</Patch>