<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <FactionDef ParentName="FactionBase">
        <defName>USAC_Faction</defName>
        <label>United Stellar Armament Company</label>
        <description>A group of resource development companies and armed trading groups driven by profit, originating from a planet that was enlightend by colonization and gained abilities to reach interstellar, countless massive corporations have created this man-eating Leviathan through military hegemony and commercial mergers and acquisitions on their home planet. Their purpose on this world is to gain a foothold and prepare for a total ground control.</description>
        <pawnSingular>operative</pawnSingular>
        <pawnsPlural>operatives</pawnsPlural>
        <categoryTag>USAC</categoryTag>
        <listOrderPriority>50</listOrderPriority>
        <settlementGenerationWeight>0</settlementGenerationWeight>
        <requiredCountAtGameStart>1</requiredCountAtGameStart>
        <maxCountAtGameStart>1</maxCountAtGameStart>
        <canMakeRandomly>true</canMakeRandomly>
        <canSiege>true</canSiege>
        <canStageAttacks>true</canStageAttacks>
        <leaderTitle>executive</leaderTitle>
        <rescueesCanJoin>true</rescueesCanJoin>
        <leaderForceGenerateNewPawn>true</leaderForceGenerateNewPawn>
        <canRequestOrbitalTrader>true</canRequestOrbitalTrader>
        <fixedLeaderKinds>
            <li>USAC_Executive</li>
        </fixedLeaderKinds>
        <factionIconPath>World/WorldObjects/Expanding/USAC_Icon</factionIconPath>
        <settlementTexturePath>World/WorldObjects/USAC_Settlement</settlementTexturePath>
        <techLevel>Spacer</techLevel>
        <factionNameMaker>USAC_NamerFaction</factionNameMaker>
        <colorSpectrum>
            <li>(0.8, 0.8, 0.8)</li>
        </colorSpectrum>
        <!-- <fixedIdeo>true</fixedIdeo> -->
        <naturalEnemy>false</naturalEnemy>
        <mustStartOneEnemy>false</mustStartOneEnemy>
        <hidden>false</hidden>
        <allowedCultures Inherit="false">
            <li MayRequire="ludeon.rimworld.ideology">USAC_Culture</li>
        </allowedCultures>
        <structureMemeWeights Inherit="false">
            <Structure_OriginChristian MayRequire="ludeon.rimworld.ideology">1</Structure_OriginChristian>
            <Structure_Ideological MayRequire="ludeon.rimworld.ideology">1</Structure_Ideological>
        </structureMemeWeights>
        <requiredMemes>
            <li MayRequire="ludeon.rimworld.ideology">Supremacist</li>
            <li MayRequire="ludeon.rimworld.ideology">Individualist</li>
            <li MayRequire="ludeon.rimworld.ideology">Proselytizer</li>
            <li MayRequire="ludeon.rimworld.ideology">HumanPrimacy</li>
        </requiredMemes>
        <disallowedMemes>
            <li MayRequire="ludeon.rimworld.ideology">Structure_Animist</li>
            <li MayRequire="ludeon.rimworld.ideology">Nudism</li>
            <li MayRequire="ludeon.rimworld.ideology">Blindsight</li>
            <li MayRequire="ludeon.rimworld.ideology">PainIsVirtue</li>
            <li MayRequire="ludeon.rimworld.ideology">FleshPurity</li>
        </disallowedMemes>
        <disallowedPrecepts>
            <li MayRequire="ludeon.rimworld.ideology">DrugUse_Prohibited</li>
            <li MayRequire="ludeon.rimworld.ideology">DrugUse_MedicalOnly</li>
            <li MayRequire="ludeon.rimworld.ideology">Slavery_Abhorrent</li>
            <li MayRequire="ludeon.rimworld.ideology">Slavery_Horrible</li>
            <li MayRequire="ludeon.rimworld.ideology">Lovin_Prohibited</li>
            <li MayRequire="ludeon.rimworld.ideology">Lovin_Horrible</li>
            <li MayRequire="ludeon.rimworld.ideology">Lovin_SpouseOnly_Strict</li>
            <li MayRequire="ludeon.rimworld.ideology">Lovin_SpouseOnly_Moderate</li>
            <li MayRequire="ludeon.rimworld.ideology">Lovin_SpouseOnly_Mild</li>
            <li MayRequire="ludeon.rimworld.ideology">Research_None</li>
            <li MayRequire="ludeon.rimworld.ideology">Research_ExtremelySlow</li>
            <li MayRequire="ludeon.rimworld.ideology">Research_VerySlow</li>
            <li MayRequire="ludeon.rimworld.ideology">Research_Slow</li>
            <li MayRequire="ludeon.rimworld.ideology">OrganUse_Abhorrent</li>
            <li MayRequire="ludeon.rimworld.ideology">OrganUse_HorribleNoSell</li>
            <li MayRequire="ludeon.rimworld.ideology">DrugUse_Prohibited</li>
            <li MayRequire="ludeon.rimworld.ideology">DrugUse_MedicalOnly</li>
            <li MayRequire="ludeon.rimworld.ideology">Nudity_Female_NoRules</li>
            <li MayRequire="ludeon.rimworld.ideology">Nudity_Male_NoRules</li>
            <li MayRequire="ludeon.rimworld.ideology">Nudity_Female_CoveringAnythingButGroinDisapproved</li>
            <li MayRequire="ludeon.rimworld.ideology">Nudity_Male_CoveringAnythingButGroinDisapproved</li>
            <li MayRequire="ludeon.rimworld.ideology">Nudity_Male_Mandatory</li>
            <li MayRequire="ludeon.rimworld.ideology">Nudity_Female_Mandatory</li>
        </disallowedPrecepts>
        <styles>
            <li MayRequire="ludeon.rimworld.ideology">USAC_Segments</li>
        </styles>
        <arrivalLayerWhitelist>
            <li>Surface</li>
            <li MayRequire="Ludeon.RimWorld.Odyssey">Orbit</li>
        </arrivalLayerWhitelist>
        <xenotypeSet>
            <xenotypeChances>
                <Hussar MayRequire="Ludeon.Rimworld.Biotech">0.1</Hussar>
                <Genie MayRequire="Ludeon.Rimworld.Biotech">0.05</Genie>
            </xenotypeChances>
        </xenotypeSet>
        <backstoryFilters>
            <li>
                <categories>
                    <li>Offworld</li>
                    <li>USAC_Common</li>
                </categories>
                <commonality>0.7</commonality>
            </li>
            <li>
                <categories>
                    <li>USAC_Common</li>
                    <li>USAC_Officer</li>
                    <li>Outlander</li>
                </categories>
                <commonality>0.3</commonality>
            </li>
        </backstoryFilters>
        <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
        <raidLootMaker>USAC_RaidLootMaker</raidLootMaker>
        <maxPawnCostPerTotalPointsCurve>
            <points>
                <li>(0,50)</li>
                <li>(70, 100)</li>
                <li>(700, 200)</li>
                <li>(1300, 300)</li>
                <li>(100000, 10000)</li>
            </points>
        </maxPawnCostPerTotalPointsCurve>
        <pawnGroupMakers>
            <!-- 纯机兵战斗组 -->
            <li>
                <kindDef>Combat</kindDef>
                <commonality>100</commonality>
                <options>
                    <USAC_Mech_Rocky>10</USAC_Mech_Rocky>
                    <USAC_Mech_Paraman>6</USAC_Mech_Paraman>
                    <USAC_Mech_Cobalt>6</USAC_Mech_Cobalt>
                    <USAC_Mech_Gonk>2</USAC_Mech_Gonk>
                    <USAC_Mech_Omaha>2</USAC_Mech_Omaha>
                </options>
            </li>
            <!-- 轻型机兵组 -->
            <li>
                <kindDef>Combat</kindDef>
                <commonality>60</commonality>
                <options>
                    <USAC_Mech_Rocky>10</USAC_Mech_Rocky>
                    <USAC_Mech_Cobalt>8</USAC_Mech_Cobalt>
                    <USAC_Mech_Paraman>4</USAC_Mech_Paraman>
                </options>
            </li>
            <!-- 重型机兵组 -->
            <li>
                <kindDef>Combat</kindDef>
                <commonality>20</commonality>
                <options>
                    <USAC_Mech_Paraman>6</USAC_Mech_Paraman>
                    <USAC_Mech_Gonk>3</USAC_Mech_Gonk>
                    <USAC_Mech_Omaha>3</USAC_Mech_Omaha>
                </options>
            </li>
            <!-- USAC 没有地面商队，仅有轨道商船 -->
        </pawnGroupMakers>
        <maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
        <configurationListOrderPriority>70</configurationListOrderPriority>
    </FactionDef>

    <!-- USAC 袭击战利品 -->
    <ThingSetMakerDef>
        <defName>USAC_RaidLootMaker</defName>
        <root Class="ThingSetMaker_MarketValue">
            <fixedParams>
                <filter>
                    <thingDefs>
                        <li>Silver</li>
                        <li>ComponentIndustrial</li>
                        <li>ComponentSpacer</li>
                        <li>MedicineIndustrial</li>
                        <li MayRequire="Ludeon.Rimworld.Biotech">HemogenPack</li>
                    </thingDefs>
                </filter>
            </fixedParams>
        </root>
    </ThingSetMakerDef>

</Defs>