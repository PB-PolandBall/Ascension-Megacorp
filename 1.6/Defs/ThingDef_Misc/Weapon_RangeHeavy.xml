  <!-- ================================= Cobra Assault Cannon ==================================== -->
  <ThingDef ParentName="USAC_BaseGun">
    <defName>USAC_Gun_CobraAC</defName>
    <label>Cobra assault cannon</label>
    <description>A large-scale assault rifle designed to provide suppressive fire. Commonly used as the standard weapon for medium Automatroids, it can also be wielded by large augmented humans or soldiers wearing heavy exoskeletons. The weapon's high rate of fire makes it effective for sustained suppression against infantry targets.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/USAC_Gun_CobraAC</texPath>
      <drawSize>1.5</drawSize>
    </graphicData>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <statBases>
      <Mass>18.5</Mass>
      <AccuracyTouch>0.55</AccuracyTouch>
      <AccuracyShort>0.72</AccuracyShort>
      <AccuracyMedium>0.82</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>1.35</RangedWeapon_Cooldown>
    </statBases>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>1.0</ShootingAccuracyPawn>
    </equippedStatOffsets>
    <costList>
      <Plasteel>150</Plasteel>
      <ComponentIndustrial>12</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>USAC_Bullet_HeavyAutoCannon</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>38.9</range>
        <ticksBetweenBurstShots>9</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>Shot_Autocannon</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>USAC_AC</li>
      <li>Mech_Weapon</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <modExtensions>
      <li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
        <def>MF_StandardMuzzleFalsh</def>
        <drawSize>(0.35,0.35)</drawSize>
        <offsets>
          <li>(0.75,0)</li>
        </offsets>
      </li>
      <li Class="Fortified.HeavyEquippableExtension">
        <EquippableDef>BulkyAutomatroid</EquippableDef>
      </li>
    </modExtensions>
  </ThingDef>

  <!-- ================================= Viper DMR ==================================== -->
  <ThingDef ParentName="USAC_BaseGun">
    <defName>USAC_Gun_ViperDMR</defName>
    <label>Viper DMR</label>
    <description>An M905 "Viper" large-caliber precision anti-materiel weapon system using autocannon ammunition. Designed to be mounted on medium Automatroids as an anti-materiel weapon, it can also be wielded by large augmented humans or soldiers wearing heavy exoskeletons. Excels at long-range precision strikes against armored targets.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/USAC_Gun_ViperDMR</texPath>
      <drawSize>1.8</drawSize>
    </graphicData>
    <weaponClasses>
      <li>LongShots</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <statBases>
      <Mass>16.2</Mass>
      <AccuracyTouch>0.70</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.93</AccuracyLong>
      <RangedWeapon_Cooldown>2.1</RangedWeapon_Cooldown>
    </statBases>
    <equippedStatOffsets>
      <HuntingStealth>0.2</HuntingStealth>
      <ShootingAccuracyPawn>1.2</ShootingAccuracyPawn>
    </equippedStatOffsets>
    <costList>
      <Plasteel>180</Plasteel>
      <ComponentIndustrial>14</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>USAC_Bullet_35mmAPDS</defaultProjectile>
        <warmupTime>2.4</warmupTime>
        <range>48.9</range>
        <soundCast>Shot_TurretSniper</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>USAC_HDMR</li>
      <li>Mech_Weapon</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <modExtensions>
      <li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
        <def>MF_StandardMuzzleFalsh</def>
        <drawSize>(0.35,0.35)</drawSize>
        <offsets>
          <li>(0.75,0)</li>
        </offsets>
      </li>
      <li Class="Fortified.HeavyEquippableExtension">
        <EquippableDef>BulkyAutomatroid</EquippableDef>
      </li>
    </modExtensions>
  </ThingDef>

