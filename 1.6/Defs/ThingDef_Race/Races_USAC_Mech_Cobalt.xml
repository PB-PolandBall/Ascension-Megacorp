<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ==================== M7 "Cobalt" ==================== -->
  <!-- 基于 DMS Hyrax 放大版，中型四足货运机兵 -->
  <ThingDef ParentName="USAC_BaseQuadMech">
    <defName>USAC_Mech_Cobalt</defName>
    <label>M7 "Cobalt"</label>
    <description>A medium quadruped cargo mech with integrated machine gun. Features shotgun-resistant armor plating, cargo hauling capability, and smoke grenade deployment system.</description>
    <statBases>
      <MoveSpeed>6.0</MoveSpeed>
      <ArmorRating_Sharp>0.8</ArmorRating_Sharp>
      <ArmorRating_Blunt>1.0</ArmorRating_Blunt>
      <ArmorRating_Heat>1.0</ArmorRating_Heat>
      <StaggerDurationFactor>0.1</StaggerDurationFactor>
      <MechEnergyUsageFactor MayRequire="Ludeon.Rimworld.Biotech">0.5</MechEnergyUsageFactor>
      <CarryingCapacity>120</CarryingCapacity>
      <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">2</BandwidthCost>
      <WastepacksPerRecharge MayRequire="Ludeon.Rimworld.Biotech">2</WastepacksPerRecharge>
    </statBases>
    <race>
      <body>USAC_Hound</body>
      <baseBodySize>1.1</baseBodySize>
      <baseHealthScale>1.2</baseHealthScale>
      <mechWeightClass>Medium</mechWeightClass>
      <mechEnabledWorkTypes>
        <li>Hauling</li>
      </mechEnabledWorkTypes>
    </race>
    <comps>
      <li Class="Fortified.CompProperties_VehicleWeapon">
        <drawData>
          <dataEast>
            <offset>(0.5,0,0.3)</offset>
          </dataEast>
          <dataWest>
            <offset>(-0.5,0,0.3)</offset>
          </dataWest>
          <dataSouth>
            <offset>(0,0,-0.3)</offset>
          </dataSouth>
          <dataNorth>
            <offset>(0,0,0.4)</offset>
          </dataNorth>
        </drawData>
        <turretRotationFollowPawn>true</turretRotationFollowPawn>
        <rotationSmoothTime>0.05</rotationSmoothTime>
      </li>
    </comps>
    <butcherProducts>
      <Steel>30</Steel>
      <Plasteel>8</Plasteel>
    </butcherProducts>
  </ThingDef>

  <PawnKindDef ParentName="USAC_BaseMechKind">
    <defName>USAC_Mech_Cobalt</defName>
    <label>M7 Cobalt</label>
    <race>USAC_Mech_Cobalt</race>
    <combatPower>100</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Mech/cobalt</texPath>
          <shaderType>CutoutComplex</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2.25</drawSize>
          <color>(192, 175, 158)</color>
          <shadowData>
            <volume>(0.8,0.7,0.8)</volume>
            <offset>(0,0,0)</offset>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponTags>
      <li>USAC_HDMR</li>
      <li>USAC_SGL</li>
    </weaponTags>
    <weaponMoney>1200~2000</weaponMoney>
    <abilities>
      <li MayRequire="Ludeon.Rimworld.Biotech">SmokepopMech</li>
    </abilities>
  </PawnKindDef>
</Defs>